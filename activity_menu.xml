<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    tools:context="akshaysathiya.riddlemethis.Menu"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="124dp"
        android:layout_height="69dp"
        android:contentDescription="@string/desc"
        app:srcCompat="@drawable/background3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView15"
        app:layout_constraintBottom_toTopOf="@+id/button_fs"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageView14"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonhtp"
        android:layout_width="395dp"
        android:layout_height="109dp"
        android:text="@string/howtoplay"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button_fs"
        android:layout_width="401dp"
        android:layout_height="94dp"
        android:contentDescription="@string/desc"
        android:text="@string/play"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/imageView14" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="124dp"
        android:layout_height="69dp"
        android:contentDescription="@string/desc"
        app:srcCompat="@drawable/background3"
        app:layout_constraintRight_toLeftOf="@+id/imageView16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonhtp"
        app:layout_constraintTop_toBottomOf="@+id/button_fs" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="124dp"
        android:layout_height="69dp"
        android:contentDescription="@string/desc"
        app:srcCompat="@drawable/background3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView9"
        app:layout_constraintBottom_toTopOf="@+id/buttonhtp"
        app:layout_constraintTop_toBottomOf="@+id/button_fs" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="124dp"
        android:layout_height="69dp"
        android:contentDescription="@string/desc"
        app:srcCompat="@drawable/background3"
        app:layout_constraintRight_toLeftOf="@+id/imageView14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_fs"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/button"
        android:layout_width="399dp"
        android:layout_height="101dp"
        android:text="@string/credits"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonhtp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
